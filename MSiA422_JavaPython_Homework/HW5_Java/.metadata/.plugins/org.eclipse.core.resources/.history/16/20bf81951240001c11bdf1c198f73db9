import java.time.LocalDate;

public class Onetime extends Appointment {
	public Integer year, month, day;
	public String type;

// constructor
	public Onetime(String description, int year, int month, int day) {
		super(description);
		this.type = "Onetime";
		this.year = year;
		this.day = day;
		this.month = month;
	}

	public boolean occursOn(int year, int month, int day) {
		LocalDate d = LocalDate.of(year, month, day);
		LocalDate appDay = LocalDate.of(year, month, day);
		return d.isEqual(appDay);
	}
	
	public String info() {
		return "One Time Meeting " +  Onetime.description + " on" + this.year + "/" + this.month + "/" +this.day;
	}

}
